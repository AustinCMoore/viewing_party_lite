<section id="title">
  <h1> <%= @movie.title %> </h1>
</section>

<%= form_with url: "/users/#{@host.id}/movies/#{@movie.id}/viewing_party/new", local: true do |f| %>
  <section id="form">
    <section id="error_messages">
      <% if @party.errors.any? %>
        <% @party.errors.full_messages.each do |message|%>
          <p><li><%= message %></p>
        <% end %>
      <% end %>
    </section>
    <li> <%= f.label :duration %>
      <%= f.text_field :duration, :value => "#{@movie.runtime}" %> </li>
    <li> <%= f.label :when %>
      <%= f.text_field :start_date %> </li>
    <li>  <%= f.label :start_time %>
      <%= f.text_field :start_time %> </li>
      <% @users.each do | user | %>
      <li>  <%= check_box_tag("#{user.name}") %>
        <%= label_tag("#{user.name}", "#{user.name}") %> </li>
      <% end %>
    <li>  <%= f.submit 'Create' %> </li>
  </section>
<% end %>
